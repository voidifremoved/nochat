---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const years = [...new Set(posts.map((post) => post.data.pubDate.getFullYear()))];
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Archives | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
	</head>
	<body class="bg-zinc-50 text-zinc-900 font-sans antialiased min-h-screen flex flex-col">
		<Header />
		<main class="w-full max-w-4xl mx-auto px-4 py-12 md:py-20 flex-grow">
			<h1 class="text-4xl md:text-5xl font-bold tracking-tight text-zinc-900 mb-12 font-display">Archives</h1>
			<section class="space-y-12">
				{
                    years.map((year) => (
                        <div>
                            <h2 class="text-2xl font-bold text-zinc-900 border-b border-zinc-200 pb-2 mb-6 font-display">{year}</h2>
                            <ul class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
                                {
                                    posts.filter((post) => post.data.pubDate.getFullYear() === year).map((post) => (
                                        <li>
                                            <a href={`${import.meta.env.BASE_URL}posts/${post.id}/`} class="block p-6 bg-white border border-zinc-200 rounded-xl hover:shadow-md hover:border-zinc-300 transition-all group h-full flex flex-col">
                                                <h3 class="text-lg font-bold text-zinc-900 group-hover:text-blue-600 mb-2 font-display leading-tight">
                                                    {post.data.title}
                                                </h3>
                                                <div class="mt-auto pt-4 text-xs font-medium text-zinc-400">
                                                    <FormattedDate date={post.data.pubDate} />
                                                </div>
                                            </a>
                                        </li>
                                    ))
                                }
                            </ul>
                        </div>
                    ))
                }
			</section>
		</main>
		<Footer />
	</body>
</html>
