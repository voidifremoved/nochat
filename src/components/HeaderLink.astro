---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'a'>;

const { href, class: className, ...props } = Astro.props;

const { pathname } = Astro.url;
const subpath = pathname.replace(import.meta.env.BASE_URL, '').split('/')[0];
const hrefPath = href.toString().replace(import.meta.env.BASE_URL, '');

const isActive = href === pathname || href === pathname.replace(/\/$/, '') || (hrefPath !== '' && subpath === hrefPath.split('/')[0]);
---

<a href={href} class:list={[className, 'inline-block px-1 py-1 transition-colors duration-200 font-medium', { 'text-zinc-900 border-b-2 border-zinc-900': isActive, 'text-zinc-500 hover:text-zinc-900 border-b-2 border-transparent hover:border-zinc-300': !isActive }]} {...props}>
	<slot />
</a>
