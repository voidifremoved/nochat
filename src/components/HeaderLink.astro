---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'a'>;

const { href, class: className, ...props } = Astro.props;

const { pathname } = Astro.url;
const subpath = pathname.replace(import.meta.env.BASE_URL, '').split('/')[0];
const hrefPath = href.toString().replace(import.meta.env.BASE_URL, '');

const isActive = href === pathname || href === pathname.replace(/\/$/, '') || (hrefPath !== '' && subpath === hrefPath.split('/')[0]);
---

<a href={href} class:list={[className, { active: isActive }]} {...props}>
	<slot />
</a>
<style>
	a {
		display: inline-block;
		text-decoration: none;
	}
	a.active {
		font-weight: bolder;
		text-decoration: underline;
	}
</style>
