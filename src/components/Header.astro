---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header class="sticky top-0 z-50 w-full bg-white/80 backdrop-blur-md border-b border-zinc-200 shadow-sm">
	<nav class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 h-16 flex items-center justify-between">
		<h2 class="text-xl font-bold tracking-tight text-zinc-900">
			<a href={import.meta.env.BASE_URL} class="hover:text-zinc-600 transition-colors duration-200">
				{SITE_TITLE}
			</a>
		</h2>
		<div class="hidden sm:flex items-center gap-6 text-sm font-medium text-zinc-600">
			<HeaderLink href={import.meta.env.BASE_URL}>Home</HeaderLink>
			<HeaderLink href={`${import.meta.env.BASE_URL}posts`}>Blog</HeaderLink>
			<HeaderLink href={`${import.meta.env.BASE_URL}tags`}>Tags</HeaderLink>
			<HeaderLink href={`${import.meta.env.BASE_URL}archives`}>Archives</HeaderLink>
			<HeaderLink href={`${import.meta.env.BASE_URL}search`}>Search</HeaderLink>
		</div>
        <!-- Mobile menu placeholder, simpler for now just keeping desktop links visible on mobile via scrolling if needed, or stacking -->
        <div class="sm:hidden flex items-center gap-4 text-sm font-medium overflow-x-auto">
            <HeaderLink href={import.meta.env.BASE_URL}>Home</HeaderLink>
			<HeaderLink href={`${import.meta.env.BASE_URL}posts`}>Blog</HeaderLink>
        </div>
	</nav>
</header>
